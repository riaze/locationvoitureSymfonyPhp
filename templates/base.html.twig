<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}

            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="{{ asset('css/cardetails.css') }}">

        {% endblock %}
    </head>
    <body>

        {% block menu %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-success" id="nav">
                <a class="navbar-brand" href="#">RentCars</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="#nav">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#banner">About us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#carlisting">Car Listing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Contact</a>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2 d-none d-sm-none d-md-none d-lg-block" type="text" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0 btn_all d-none d-sm-none d-md-none d-lg-block" type="submit">Search</button>
                        {% if app.user %}
                        <div class="dropdown pl-1">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item btn btn-secondary btn_all mt-0"><i class="fa fa-user-circle-o" aria-hidden="true"></i>
                            {{ app.user.prenom }}</a><br>
                        {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin') }}"  class="dropdown-item btn_all my-2 my-sm-0 ml-0" >
                            Go Dashboard</a>
                        {% endif %}
                        <a href="{{ path('app_logout') }}"  class="dropdown-item my-2 my-sm-0    btn_all" >
                            logout
                        </a>
                        {% endif %}
                        </div>
                        </div>
                        
                        {% if not app.user %}
                        <a href="{{ path('app_login') }}" type="button" class="btn btn-secondary my-2 my-sm-0 ml-2 btn_all open-modal" >
                            login
                        </a>

                        {% else  %}
                        {% endif %}

                        
                    </form>
                </div>

            </nav>
           {% endblock%}
        {% block body %}{% endblock %}

        {% block footer %}
            <footer id="contact" class="mb-0">
                <div class="footer-bottom">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">

                                <p class="copy-right">Copyright &copy; 2017 Car Rental Portal. All Rights Reserved</p>
                            </div>
                            <div class="col-md-5 footer_widget ">
                                <p>Connect with Us:</p>
                                <ul>
                                    <li><a href="http://www.facebook.com" target=_blank><i class="fa fa-facebook-square" aria-hidden="true"></i></a></li>
                                    <li><a href="http://www.twitter.com" target=_blank><i class="fa fa-twitter-square" aria-hidden="true"></i></a></li>
                                    <li><a href="https://www.linkedin.com/in/riaze-mohamed-sherif-88512833/" target=_blank><i class="fa fa-linkedin-square" aria-hidden="true"></i></a></li>
                                    <li><a href="https://github.com/riaze" target=_blank><i class="fa fa-github" aria-hidden="true"></i></a></li>
                                    <li><a href="https://www.instagram.com" target=_blank><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                                </ul>

                            </div>


                        </div>
                    </div>
                </div>
            </footer>
        {% endblock%}

        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"
                integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
                crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>        
        <script src="/js/bootstrap.bundle.min.js"></script>
        
    </body>
</html>
