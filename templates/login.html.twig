{% extends 'base.html.twig' %}

{% block body %}
<form action="{{ path('membres_login') }}" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" required name="email" class="form-control ml-3 " id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">

    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" required name="mdp" class="form-control ml-5 mt-2" id="exampleInputPassword1" placeholder="Password">
    </div>

    <button type="submit" class="btn btn-primary btn_all">Login</button>
</form>
{% endblock %}



